<Window x:Class="Marinichev619KingIT.WindowCapcha"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Marinichev619KingIT"
        mc:Ignorable="d"
        Title="Capcha" Height="250" Width="200" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" Closing="Window_Closing">
    <Grid>
        <TextBlock x:Name="tbNum" HorizontalAlignment="Center" Margin="0,25,0,0" TextWrapping="Wrap" Text="Введите число:" VerticalAlignment="Top" FontSize="14"/>
        <TextBox x:Name="tbCapcha" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Width="120" Height="25" FontSize="14" VerticalContentAlignment="Center"/>
        <Button x:Name="btnCheck" Content="Подтвердить" HorizontalAlignment="Center" Margin="0,170,0,0" VerticalAlignment="Top" Width="100" Height="25" FontSize="14" Click="btnCheck_Click"/>
    </Grid>
</Window>
